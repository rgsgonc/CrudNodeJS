<%- include layouts/header.ejs %>

        <div class="page-data">
            
            <form method="post" action="/demandas/add">
                <table cellpadding="11">
                <tr>
                    <td class="label">Qual a Solução/Produto?</td>
                    <td>
                        <select class="select-style" id="solucaoproduto" name="solucaoproduto">
                            <option value="Intelletotum">Intelletotum</option>
                        </select>
                    </td>
                 </tr>
                 <tr>
                    <td class="label" valign="top">O que deve ser feito?</td><td valign="top"> <textarea class="text-area" name="oquefazer" required cols="30" rows="5"></textarea></td>
                </tr>
                <tr>
                    <td class="label">Para qual versão da Solução/Produto deve ser feito o desenvolvimento?</td><td> <input type="text" class="select-style" class="select-style" name="versaoproduto" id="versaoproduto" required ></td>
                 </tr>
                <tr>
                    <td class="label">Em qual base/servidor deve ser aplicado?</td><td> <input type="text" class="select-style" name="baseservidor" id="baseservidor" required ></td>
                 </tr>
                  <tr>
                    <td class="label">Qual prazo precisa ser atendido?</td><td> <input type="date" class="select-style-date" name="prazo" id="prazo" required ></td>
                 </tr>
                 <tr>
                    <td class="label">Qual o impacto deste deste desenvolvimento?</td><td> <input type="text" class="select-style" name="impactodesenv" id="impactodesenv" required></td>
                 </tr>
                 <tr>
                    <td class="label">É um desenvolvimento específico para algum cliente?</td>
                    <td> 
                        <select class="select-style" id="clienteespecifico" name="clienteespecifico">
                            <option value="">--Cliente--</option>
                            <option value="Agemed">Agemed</option>
                            <option value="Enforce">Enforce</option>
                            <option value="Paraguai">Paraguai</option>
                        </select>
                        
                    </td>
                 </tr>
                 <tr>
                    <td class="label"></td>
                    <td>
                        &nbsp; <input type="submit" name="submit" value="Salvar Demanda">
                       <input type="button" name="cancel" value="Cancelar" class="cancel" onClick="cancelAddDemandas()">
                    </td>
                 </tr>
                </table>
            </form>
            
        </div>
        
<%- include layouts/footer.ejs %>
